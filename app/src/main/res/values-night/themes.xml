<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/editTextColorDark</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#ababab</item>
        <!-- Status bar color. -->
        <!-- <item name="android:statusBarColor">@color/purple_200</item> -->
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:background">
            @drawable/editbackgrounddark
        </item>
        <item name="android:popupBackground">
            @drawable/editbackgrounddark
        </item>
        <item name="android:textAlignment">
            textStart
        </item>
    </style>

    <style name="ImageChange">
        <item name="android:background">@drawable/headerbkg_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBoxBackground">
        <item name="android:background">@drawable/editbackgrounddark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageColor">
        <item name="android:src">@drawable/icon_info_dark</item>
    </style>

    <style name="Popup">
        <item name="android:background">@drawable/dialogbkg_dark</item>
    </style>

    <style name="Background">
        <item name="android:background">#121212</item>
    </style>

    <style name="IntroButtons">
        <item name="android:background">@drawable/border_dark</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Indicator">
        <item name="tabBackground">@drawable/indicator_selector_dark</item>
    </style>
</resources>